<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_event_image_cv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_event_image_cv">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_event_name_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_darker"
                    android:padding="10dp"
                    android:text="LITERARY"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_decsription_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_name_cv"
                    android:layout_marginTop="10dp"
                    android:text="DESCRIPTION"
                    android:textColor="@color/gray_dark" />

                <TextView
                    android:id="@+id/tv_event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_decsription_tag"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="LITERARY"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_rules_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_description"
                    android:layout_marginTop="10dp"
                    android:text="RULES"
                    android:textColor="@color/gray_dark" />


                <TextView
                    android:id="@+id/tv_event_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rules_tag"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="RULES"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tv_duration_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_rules"
                    android:layout_marginTop="10dp"
                    android:text="DURATION"
                    android:textColor="@color/gray_dark" />


                <TextView
                    android:id="@+id/tv_event_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_duration_tag"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="DURATION"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tv_event_type_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_duration"
                    android:layout_marginTop="10dp"
                    android:text="EVENT TYPE"
                    android:textColor="@color/gray_dark" />


                <TextView
                    android:id="@+id/tv_event_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_event_type_tag"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:text="EVENT TYPE"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>